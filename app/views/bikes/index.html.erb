<h1>Current Bikes</h1>


<% @bikes.each do |bike| %>

  <%= bike.name %><br>
  <%= image_tag bike.image.url(:medium) %>

<%= "Checked out!" if bike.is_checked_out? %>

<%= form_for(@checkout) do |f| %>
  <%= f.hidden_field :user_id, value: @current_user.id %>
  <%= f.hidden_field :bike_id, value: bike.id %>
  <%= f.submit "Check #{bike.name} out" %>
<% end %>

<% end %>

