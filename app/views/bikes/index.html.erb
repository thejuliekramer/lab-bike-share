<% @bikes.each do |bike| %>

	<%= bike.name %><br>
	<%= image_tag bike.image.url(:medium) %>

	<% if bike.is_checked_out? %>
		Checked out!
	<% else %>
		<%= form_for(@checkout) do |f| %>
			<%= f.hidden_field :user_id, value: @current_user.id %>
			<%= f.hidden_field :bike_id, value: bike.id %>
			<%= f.submit "Check #{bike.name} out" %>
		<% end %>
	<% end %>

<% end %>

